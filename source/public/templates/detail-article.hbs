<div class="sitemap">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#/home">Home</a></li>
        <li class="breadcrumb-item"><a class="breadcrumb-item-category" href="#/articles?category={{article.category}}">{{article.category}}</a></li>
        <li class="breadcrumb-item">{{article.title}}</li>
    </ol>
</div>
<div class="detailed-article-container">
    <div class="row no-gutters">
        <div class="col- da-details">
            <div class="da-image-container">

                <div class="da-category">
                    {{article.category}}
                </div>
                <img class="da-image" src="{{article.image}}">
                <div class="da-date">
                    <span>{{getMonthName article.creationDate}}</span>
                    <span> {{getDayNumber article.creationDate}}</span>
                </div>

            </div>

            <div class="da-tags-container">
                <h3>TAGS</h3>
                <span>{{article.category}}</span>
            </div>

            <div class="da-share-icons-container">
                <h3>SHARE THIS</h3>
                <span>
                    <a target="popup" onclick="window.open('http://twitter.com/intent/tweet?status={{article.title}}+https://raw.githack.com/KirilVelichkov/Newsletter-Client/master/dist/index.html#/article/{{article._id}}','popup','width=600,height=600,scrollbars=no,resizable=no'); return false;"
                        href="http://twitter.com/intent/tweet?status={{article.title}}+https://raw.githack.com/KirilVelichkov/Newsletter-Client/master/dist/index.html/article/{{article._id}}">
                     <img src="/public/images/twitter.png">
                    </a>
                </span>

                <span>
                    <a target="popup" onclick="window.open('http://www.facebook.com/share.php?u=https://raw.githack.com/KirilVelichkov/Newsletter-Client/master/dist/index.html#/article/{{article._id}}&title={{article.title}}','popup','width=600,height=600,scrollbars=no,resizable=no'); return false;"
                        href="http://www.facebook.com/share.php?u=https://raw.githack.com/KirilVelichkov/Newsletter-Client/master/dist/index.html/article/{{article._id}}&title={{article.title}}">
                     <img src="/public/images/facebook.png">
                    </a>
                </span>

                <span>
                    <a href="#">
                     <img src="/public/images/share-icon3.png">
                    </a>
                </span>

                <span>
                    <a href="#">
                     <img src="/public/images/share-icon4.png">
                    </a>
                </span>

                <span>
                    <a href="#">
                     <img src="/public/images/share-icon5.png">
                    </a>
                </span>
            </div>
        </div>

        <div class="col- da-content-container">
            <h1>{{article.title}}</h1>

            <div class="da-author">
                POSTED BY {{article.owner.username}} IN {{article.category}} | {{article.comments.length}} COMMENTS
            </div>

            <div class="da-content">
                {{article.description}}
            </div>
        </div>
    </div>    
</div>

<div class="col comments-container float-right">
    <div class="comments-count-holder">
        {{article.comments.length}} COMMENTS
    </div>
    {{#each article.comments}}
        <div class="comment row">
            <div class="col- comment-image-holder">
                <img class="comment-profile-image" src="{{this.author.image}}">
            </div>
            <div class="col- comment-content-holder">
                <h4>{{this.author.username}}</h4>
                <p>{{this.content}}</p>
            </div>
            <input class="reply-modal-btn" type="button" value="Reply" data-articleid="{{../article._id}}" data-commentid="{{this._id}}" data-toggle="modal" data-target="#reply-modal" />

            <div class="replies">
                {{#each this.replies}}
                    <div class="col- comment-image-holder">
                        <img class="comment-profile-image" src="{{this.author.image}}">
                    </div>
                    <div class="col- comment-content-holder">
                        <h4>{{this.author.username}}</h4>
                        <p>{{this.content}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
    <div class="create-comment-holder">
        <h4>LEAVE COMMENT<h4>
        <textarea id="comment-content" rows="8"></textarea>
        <div>
            <button id="add-comment">CREATE</button>
        </div>
    </div>
</div>

<div id="reply-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Reply</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="reply-content">Content:</label>
                <textarea class="form-control" rows="5" id="reply-content"></textarea>
            </div>
            <input id="btn-reply" class="btn btn-default" type="submit" value="Reply" />
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div>
</div>